{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "../dist/tools",
        "sourceMap": true,
        "skipLibCheck": true,
        "declaration": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2016",
        "typeRoots": [
            "../node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "include": ["./**/*.ts"]
}
